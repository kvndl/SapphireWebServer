<div class="d-flex justify-content-center align-middle">
    <div class="row">
        <div class="col">
            {{ title }}<br /><br />
            <form method="POST" action="/contact" id="contact-form">
                <input type="text" name="name" id="contact-input" class="text-light" placeholder="name" required>
                <br><br>
                <input type="email" name="email" id="contact-input" class="text-light" placeholder="email" required>
                <br><br>
                <textarea name="message" id="contact-input" class="text-light" placeholder="message" rows="5" cols="30" required></textarea>
                <br /><br />
                <label for="antiBot">anti-bot</label><br>
                <input type="text" id="contact-input" name="antiBot" required placeholder="what color is the sun?" class="text-light"><br><br>
                <button type="submit" class="btn btn-outline-light">send message</button>
            </form>
        </div>
    </div>
</div>